@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client

<h4>Add a new client</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required = "required" })
  <br />
  @Html.LabelFor(model => model.Phone)
  @Html.TextBoxFor(model => model.Phone, new { required = "required" })
  <br />
  @Html.LabelFor(model => model.Email)
  @Html.TextBoxFor(model => model.Email, new { required = "required" })
  <br />
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  <br />
  <input type="submit" value="Create" />
}
<button>@Html.ActionLink("Add new Stylist", "Create")</button>
