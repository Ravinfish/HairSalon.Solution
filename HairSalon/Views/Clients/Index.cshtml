@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<h1>Clients</h1>

@if (Model.Count == 0)
{
  <h3>No Clients have been added yet...</h3>
}
else
{
  @foreach (Client client in Model)
  {
        <h4>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</h4>
  }
}

<button>@Html.ActionLink("Add new Client", "Create", "Clients")</button>
